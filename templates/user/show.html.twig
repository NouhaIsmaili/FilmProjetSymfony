{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-12">
                <div class="card shadow-lg" style="background-color: #f7f9fb;">
                    <div class="card-header" style="background-color: #a3c9e2; color: #fff;">
                        <h3 class="card-title mb-0">User Details</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h4 class="mb-3">Personal Information</h4>
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <th>ID</th>
                                        <td>{{ user.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ user.nom }}</td>
                                    </tr>
                                    <tr>
                                        <th>Surname</th>
                                        <td>{{ user.prenom }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    <tr>
                                        <th>Password</th>
                                        <td>**********</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_user_index') }}" class="btn" style="background-color: #ffcc80; color: #fff;">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn" style="background-color: #ffab73; color: #fff;">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
