{% extends 'base.html.twig' %}

{% block title %}Liste des films{% endblock %}

{% block body %}
<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Liste des films</h1>
        <a href="{{ path('app_film_new') }}" class="btn" style="background-color: #ffab73; color: #fff;">
            <i class="bi bi-plus-lg"></i> Ajouter un film
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark" style="background-color: #a3c9e2;">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Date de création</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for film in films %}
                <tr>
                    <td>{{ film.id }}</td>
                    <td>{{ film.titre }}</td>
                    <td>{{ film.dateCreation ? film.dateCreation|date('Y-m-d') : '' }}</td>
                    <td>{{ film.genre }}</td>
                    <td>
                        <a href="{{ path('app_film_show', {'id': film.id}) }}" class="btn btn-sm" style="background-color: #ffcc80; color: #fff;">Afficher</a>
                        <a href="{{ path('app_film_edit', {'id': film.id}) }}" class="btn btn-sm" style="background-color: #ffab73; color: #fff;">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">Aucun film trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
