<form method="post" action="{{ path('app_film_delete', {'id': film.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');"class="d-inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ film.id) }}">
    <button type="submit" class="btn btn-danger" style="background-color: #f8d7da; border-color: #f5c6cb; color: #721c24;">
        Delete</button>
</form>
