{% extends 'base.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block body %}
<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Liste des réservations</h1>
        <a href="{{ path('app_reservation_new') }}" class="btn" style="background-color: #ffab73; color: #fff;">
            <i class="bi bi-plus-lg"></i> Ajouter une réservation
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark" style="background-color: #a3c9e2;">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Date de réservation</th>
                    <th scope="col">État</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.dateR ? reservation.dateR|date('Y-m-d') : '' }}</td>
                    <td>{{ reservation.etatR }}</td>
                    <td>
                        <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-sm" style="background-color: #ffcc80; color: #fff;">Afficher</a>
                        <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm" style="background-color: #ffab73; color: #fff;">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">Aucune réservation trouvée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
